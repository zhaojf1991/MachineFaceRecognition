<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepage_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="1280px"
        android:layout_height="1580px"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/resultbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_imgv"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/pic_imgv2"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_imgv"
            android:layout_centerHorizontal="true"
            android:text="识别并非真人，请本人重新进行识别"
            android:textColor="@color/colorWhite"
            android:textSize="72px" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imgarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
</RelativeLayout>