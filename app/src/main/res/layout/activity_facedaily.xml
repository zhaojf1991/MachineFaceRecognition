    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp">

        <ListView
            android:id="@+id/daily_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layoutAnimation="@anim/listview" />
    </RelativeLayout>
</LinearLayout>