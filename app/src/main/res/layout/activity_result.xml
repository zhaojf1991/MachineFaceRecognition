<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepage_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="1280px"
        android:layout_height="1580px"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/resultbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_imgv"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/pic_imgv2"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_imgv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="姓名"
                android:textColor="@color/color91989e"
                android:textSize="72px" />

            <TextView
                android:id="@+id/name_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30px"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="72px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="400px"
            android:layout_height="1px"
            android:layout_below="@+id/name_ll"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line" />


        <LinearLayout
            android:id="@+id/id_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="手机"
                android:textColor="@color/color91989e"
                android:textSize="72px" />

            <TextView
                android:id="@+id/id_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30px"
                android:text="000132"
                android:textColor="@color/colorWhite"
                android:textSize="72px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="400px"
            android:layout_height="1px"
            android:layout_below="@+id/id_ll"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/work_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="部门"
                android:textColor="@color/color91989e"
                android:textSize="72px" />

            <TextView
                android:id="@+id/work_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30px"
                android:text="000132"
                android:textColor="@color/colorWhite"
                android:textSize="72px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="400px"
            android:layout_height="1px"
            android:layout_below="@id/work_ll"
            android:layout_centerHorizontal="true"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_imgv"
            android:layout_centerHorizontal="true"
            android:text="@string/result"
            android:textColor="@color/colorWhite"
            android:textSize="72px" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imgarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
</RelativeLayout>