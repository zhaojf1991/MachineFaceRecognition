<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rv"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/back_imgv"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/face_query"
            android:textColor="@color/colorWhite"
            android:textSize="48px" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="84px"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15px"
        android:paddingTop="15px"
        android:text="搜索条件"
        android:textColor="@color/color6f7974"
        android:textSize="48px" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15px"
            android:text="姓名"
            android:textColor="@color/color6f7974"
            android:textSize="60px" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="85px"
            android:background="@color/colorWhite"
            android:hint="@string/please_input"
            android:paddingBottom="5px"
            android:paddingLeft="25px"
            android:paddingTop="5px"
            android:singleLine="true"
            android:textColor="@color/color6f7974"
            android:textColorHint="@color/hint"
            android:textSize="60px" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15px"
            android:text="工号"
            android:textColor="@color/color6f7974"
            android:textSize="60px" />

        <EditText
            android:id="@+id/number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="85px"
            android:background="@color/colorWhite"
            android:hint="@string/please_input"
            android:paddingBottom="5px"
            android:paddingLeft="25px"
            android:paddingTop="5px"
            android:singleLine="true"
            android:textColor="@color/color6f7974"
            android:textColorHint="@color/hint"
            android:textSize="60px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <Button
            android:id="@+id/query_imgv"
            android:layout_width="260px"
            android:layout_height="88px"
            android:layout_marginBottom="40px"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40px"
            android:layout_toLeftOf="@+id/clear_imgv"
            android:background="@drawable/btn_blue_shape"
            android:text="查询"
            android:textColor="@color/colorWhite"
            android:textSize="48px" />

        <Button
            android:id="@+id/clear_imgv"
            android:layout_width="260px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40px"
            android:layout_marginRight="5dp"
            android:layout_marginTop="40px"
            android:background="@drawable/btn_white_shape"
            android:text="清空"
            android:textColor="@color/color00c4e6"
            android:textSize="48px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:text="人员列表"
            android:textColor="@color/color6f7974"
            android:textSize="48px" />

        <TextView
            android:id="@+id/tv_pernum"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color6f7974"
            android:textSize="48px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delall_btn"
            android:layout_width="260px"
            android:layout_height="88px"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="40px"
            android:layout_toLeftOf="@+id/clear_btn"
            android:background="@drawable/btn_blue_shape"
            android:text="全部删除"
            android:textColor="@color/colorWhite"
            android:textSize="48px" />

        <Button
            android:id="@+id/del_btn"
            android:layout_width="260px"
            android:layout_height="88px"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="40px"
            android:background="@drawable/btn_white_shape"
            android:text="删除"
            android:textColor="@color/colorText"
            android:textSize="48px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line" />

    <ListView
        android:id="@+id/per_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" />
</LinearLayout>